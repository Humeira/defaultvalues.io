{{!< default}}

{{#post}}



<main class="content" role="main">
    <article class="{{post_class}}">

              <h1 class="post__title">{{title}}</h1>
               {{#if image}}
                <div>
                    <img src="{{image}}">
                </div>
             {{/if}}
             <section class="post__meta">
                <p>Posted on <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time> {{tags prefix=" on "}} 
	    {{!>adsense}}
            </section>
            <section class="post-content">
                {{content}}
            </section>
        <section class="share">
          <hr>
             <h4>Share this post</h4>
		<font face="Mono Social Icons Font" size="25px" color="#076351">
                <a class='socials' href="https://twitter.com/share?text={{encode title}}&amp;url={{url absolute="true"}}"
                    onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">twitterbird
                </a>
                <a class="icon-facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
                    onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                </a>
                <a class="icon-google-plus" href="https://plus.google.com/share?url={{url absolute="true"}}"
                   onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
                </a>
		</font>
        </section>
    </article>
</main>


{{/post}}
